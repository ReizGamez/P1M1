<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="-"
            android:id="@+id/num_1"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="27dp"
            android:textSize="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="-"
            android:id="@+id/num_2"
            android:gravity="center"
            android:layout_alignTop="@+id/num_1"
            android:layout_toRightOf="@+id/num_1"
            android:layout_toEndOf="@+id/num_1"
            android:textSize="40dp" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="-"
            android:id="@+id/num_3"
            android:gravity="center"
            android:layout_alignTop="@+id/num_2"
            android:layout_toRightOf="@+id/num_2"
            android:layout_toEndOf="@+id/num_2"
            android:textSize="40dp" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="-"
            android:id="@+id/num_4"
            android:gravity="center"
            android:layout_alignTop="@+id/num_3"
            android:layout_toRightOf="@+id/num_3"
            android:layout_toEndOf="@+id/num_3"
            android:textSize="40dp" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1"
            android:id="@+id/deneme_num_1"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/deneme_num_2"
            android:layout_toStartOf="@+id/deneme_num_2"
            android:textSize="20dp"
            android:textColor="#FF000000" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="2"
            android:id="@+id/deneme_num_2"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/deneme_num_3"
            android:layout_toStartOf="@+id/deneme_num_3"
            android:textSize="20dp"
            android:textColor="#FF000000" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="3"
            android:id="@+id/deneme_num_3"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/deneme_num_4"
            android:layout_toStartOf="@+id/deneme_num_4"
            android:textSize="20dp"
            android:textColor="#FF000000" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="4"
            android:id="@+id/deneme_num_4"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/deneme_num_5"
            android:layout_toStartOf="@+id/deneme_num_5"
            android:textSize="20dp"
            android:textColor="#FF000000" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="5"
            android:id="@+id/deneme_num_5"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:textSize="20dp"
            android:textColor="#FF000000" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/deneme_num_0"
            android:layout_below="@+id/deneme_num_4"
            android:layout_toRightOf="@+id/deneme_num_4"
            android:layout_toEndOf="@+id/deneme_num_4"
            android:textSize="20dp"
            android:textColor="#FF000000" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="9"
            android:id="@+id/deneme_num_9"
            android:layout_alignTop="@+id/deneme_num_0"
            android:layout_toLeftOf="@+id/deneme_num_0"
            android:layout_toStartOf="@+id/deneme_num_0"
            android:textSize="20dp"
            android:textColor="#FF000000" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="8"
            android:id="@+id/deneme_num_8"
            android:layout_alignTop="@+id/deneme_num_9"
            android:layout_alignRight="@+id/deneme_num_3"
            android:layout_alignEnd="@+id/deneme_num_3"
            android:textSize="20dp"
            android:textColor="#FF000000" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="7"
            android:id="@+id/deneme_num_7"
            android:layout_alignTop="@+id/deneme_num_8"
            android:layout_toLeftOf="@+id/deneme_num_8"
            android:layout_toStartOf="@+id/deneme_num_8"
            android:textSize="20dp"
            android:textColor="#FF000000" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="6"
            android:id="@+id/deneme_num_6"
            android:layout_alignTop="@+id/deneme_num_7"
            android:layout_toLeftOf="@+id/deneme_num_7"
            android:layout_toStartOf="@+id/deneme_num_7"
            android:textSize="20dp"
            android:textColor="#FF000000" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:text="1"
                        android:id="@+id/btn1"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <Button
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:text="2"
                        android:id="@+id/btn2"
                        android:layout_above="@+id/btn6"
                        android:layout_toLeftOf="@+id/btn3"
                        android:layout_toStartOf="@+id/btn3"
                        android:layout_toRightOf="@+id/btn1" />

                    <Button
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:text="3"
                        android:id="@+id/btn3"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/btn4"
                        android:layout_toStartOf="@+id/btn4" />

                    <Button
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:text="4"
                        android:id="@+id/btn4"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/btn5"
                        android:layout_toStartOf="@+id/btn5" />

                    <Button
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:text="5"
                        android:id="@+id/btn5"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/confirm_single1"
                        android:layout_toStartOf="@+id/confirm_single1"
                        android:layout_marginRight="15dp"
                        android:layout_marginEnd="26dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:text="6"
                        android:id="@+id/btn6"
                        android:layout_alignParentBottom="true"
                        android:layout_toLeftOf="@+id/btn2"
                        android:layout_toStartOf="@+id/btn2"
                        android:layout_alignLeft="@+id/btn1" />

                    <Button
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:text="7"
                        android:id="@+id/btn7"
                        android:layout_below="@+id/btn1"
                        android:layout_toRightOf="@+id/btn6"
                        android:layout_toEndOf="@+id/btn1" />

                    <Button
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:text="8"
                        android:id="@+id/btn8"
                        android:layout_below="@+id/btn3"
                        android:layout_toRightOf="@+id/btn2"
                        android:layout_toEndOf="@+id/btn2" />

                    <Button
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:text="9"
                        android:id="@+id/btn9"
                        android:layout_below="@+id/btn3"
                        android:layout_toRightOf="@+id/btn8"
                        android:layout_toEndOf="@+id/btn8" />

                    <Button
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:text="0"
                        android:id="@+id/btn0"
                        android:layout_below="@+id/btn4"
                        android:layout_toRightOf="@+id/btn4"
                        android:layout_toEndOf="@+id/btn4" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="10dp">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:text="ONAYLA"
                    android:id="@+id/confirm_single1"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:fillViewport="false"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/result_single1" />
    </ScrollView>

</LinearLayout>
